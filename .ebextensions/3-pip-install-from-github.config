files:
    "/root/.ssh/config":
        owner: root
        group: root
        mode: "000600"
        content: |
            Host github.com
                User git
                Hostname github.com
                IdentityFile /home/ec2-user/wgtbot-github-deploy
    "/root/.ssh/known_hosts":
        owner: root
        group: root
        mode: "000644"
        content: |
            # github.com:22 SSH-2.0-babeld-5a455904
            |1|ZKgYVBr+U7VAcWEPFiDIHJScBcY=|mRzDqOwMxRpT9dogB5UP3baq6RY= ssh-rsa 
            # github.com:22 SSH-2.0-babeld-5a455904
            # github.com:22 SSH-2.0-babeld-5a455904

commands:
    01-command:
        command: sudo aws s3 cp s3://wgtbot-deployment-key/github /home/ec2-user
    02-command:
        command: sudo chmod 600 /home/ec2-user/wgtbot-github-deploy